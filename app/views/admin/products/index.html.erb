<h1>Products List</h1>

<div class="pull-right">
  <%= link_to("Add new product", new_admin_product_path, class: "btn btn-primary") %>
</div>

<table class="table table-boldered">
  <thead>
    <tr>
      <td> # </td>
      <td> 品名 </td>
      <td> description </td>
      <td> quantity </td>
      <td> price </td>
      <td> 选项 </td>
      <td> 创建日期 </td>
      <td> </td>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |p| %>
    <tr>
      <td>
        <%= p.id %>
      </td>
      <td>
        <%= link_to(p.title, admin_product_path(p)) %>
      </td>
      <td>
        <%= p.description %>
      </td>
      <td>
        <%= p.quantity %>
      </td>
      <td>
        <%= p.price %>
      </td>
      <td>
        <%= link_to("Edit", edit_admin_product_path(p)) %>
        <%= link_to("Delete", admin_product_path(p), method: :delete, data: {confirm: "真的要删么，矬人"}) %>
      </td>
      <td>
        <%= p.created_at %>
      </td>
      <td>
        <% if p.is_present%>
          <%= link_to("下架", hideProduct_admin_product_path(p), method: :post, class: "btn btn-primary") %>
        <% else %>
          <%= link_to("上架", publishProduct_admin_product_path(p), method: :post) %>
        <% end %>
      </td>
    </tr>
    <% end %>

  </tbody>
</table>
